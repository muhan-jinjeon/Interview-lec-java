package logic;
//1-2 +3-4 + 5-6 = -3
public class Series3 {

	public static void main(String[] args) {
		int n=6, num1=0,num2=0, count=0;
		System.out.println("First " +n+ " numbers");

		for(int i=1 ; i<=n ;i++) {
			if(i%2==0)
				num1=i-2;
			else {
				num2=-i+2;
			}
			count=num2-num1;
			
			
		}
			
			
		//count= -(n/2);
		System.out.println( "=" + (count) );	

		}
		
		

	}


